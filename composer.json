{
	"name": "oops/totp-authenticator",
	"description": "Two-factor authenticator via TOTP algorithm.",
	"keywords": ["security", "authentication", "2fa", "totp"],
	"type": "library",
	"license": "BSD-3-Clause",
	"authors": [
		{
			"name": "Jiří Pudil",
			"email": "me@jiripudil.cz",
			"homepage": "http://jiripudil.cz"
		}
	],
	"support": {
		"email": "me@jiripudil.cz",
		"issues": "https://github.com/o2ps/TotpAuthenticator/issues"
	},
	"require": {
		"php": ">=7.2.0 <8.2",
		"paragonie/constant_time_encoding": "^2.0"
	},
	"require-dev": {
		"nette/di": "^3.0",
		"nette/tester": "^2.3.1",
		"mockery/mockery": "^1.3",
		"phpstan/phpstan": "^0.12"
	},
	"suggest": {
		"nette/di": "Optional integration with Nette's DI container"
	},
	"autoload": {
		"psr-4": {
			"Oops\\TotpAuthenticator\\": "src/"
		},
		"classmap": [
			"src/exceptions.php"
		]
	}
}
